AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: >
  SAM Template for ws-serverless-patterns

# Globals:

Resources:
  UsersTable:
    Type: AWS::DynamoDB::Table
    Properties:
      TableName: !Sub  ${AWS::StackName}-Users # Dynamodb table name
      AttributeDefinitions:
        - AttributeName: userid # Attribute definition for primary key
          AttributeType: S # String type
      KeySchema:
        - AttributeName: userid # Primary key
          KeyType: HASH
      BillingMode: PAY_PER_REQUEST # On-demand billing mode
Outputs:
  UsersTableName:
    Description: DynamoDB Users table 
    Value: !Ref UsersTable
